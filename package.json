{
	"name": "macro-runner",
	"displayName": "MacroRunner",
	"description": "A quick way to make edits to a single document using JavaScript",
	"version": "1.0.2",
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"directory": ".",
		"type": "git",
		"url": "https://github.com/El-Tejaso/MacroRunner"
	},
	"publisher": "El-Tejaso",
	"activationEvents": [
		"onCommand:MacroRunner.runMacro",
		"onCommand:MacroRunner.newMacro",
		"onCommand:MacroRunner.loadMacro",
		"onCommand:MacroRunner.saveMacro",
		"onCommand:MacroRunner.removeMacro",
		"onCommand:MacroRunner.openMacrosDirectory"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "MacroRunner.runMacro",
				"title": "MacroRunner: Run Macro"
			},
			{
				"command": "MacroRunner.newMacro",
				"title": "MacroRunner: New Macro"
			},
			{
				"command": "MacroRunner.loadMacro",
				"title": "MacroRunner: Load Macro"
			},
			{
				"command": "MacroRunner.saveMacro",
				"title": "MacroRunner: Save Macro"
			},
			{
				"command": "MacroRunner.removeMacro",
				"title": "MacroRunner: Delete Macro"
			},
			{
				"command": "MacroRunner.openMacrosDirectory",
				"title": "MacroRunner: Open Macros directory"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.65.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5"
	}
}