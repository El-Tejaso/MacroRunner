{
	"name": "macrorunner",
	"displayName": "MacroRunner",
	"description": "An extension that allows you to automate repetitive tasks with code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:macrorunner.runMacro",
		"onCommand:macrorunner.newMacro",
		"onCommand:macrorunner.loadMacro",
		"onCommand:macrorunner.saveMacro",
		"onCommand:macrorunner.removeMacro"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "macrorunner.runMacro",
				"title": "Macro runner: Run macro"
			},
			{
				"command": "macrorunner.newMacro",
				"title": "Macro runner: New macro"
			},
			{
				"command": "macrorunner.loadMacro",
				"title": "Macro runner: Load macro"
			},
			{
				"command": "macrorunner.saveMacro",
				"title": "Macro runner: Save macro"
			},
			{
				"command": "macrorunner.removeMacro",
				"title": "Macro runner: Remove macro"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"document": "typedoc --out docs src/extension.ts"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.65.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5"
	}
}
